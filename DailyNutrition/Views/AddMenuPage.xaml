<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyNutrition.Views.AddMenuPage"
             Title="AddMenuPage">
    
    <StackLayout>

        <!-- รูปอาหาร -->
        <Image x:Name="FoodImage" 
               HeightRequest="200" 
               WidthRequest="200" 
               Margin="10"
               Aspect="AspectFill" />
        <Button Text="อัปโหลดรูปอาหาร" 
                Margin="20"
                Clicked="UploadImageButton_Clicked" />
        
        
        <!-- ฟิลด์กรอกข้อมูล -->
        <Entry x:Name="MenuName" 
               Placeholder="ชื่อเมนู" />
        
        <Entry x:Name="Protein" 
               Placeholder="โปรตีน (g)" 
               Keyboard="Numeric" />
        
        <Entry x:Name="Carbohydrates" 
               Placeholder="คาร์โบไฮเดรต (g)" 
               Keyboard="Numeric" />
        
        <Entry x:Name="Fat" 
               Placeholder="ไขมัน (g)" 
               Keyboard="Numeric" />
        
        <Label x:Name="EnergyLabel" 
               Text="พลังงานทั้งหมด: 0 กิโลแคลอรี่" />
        
        <Button Text="เพิ่มเมนู" 
                Margin="20"
                Clicked="AddMenuButton_Clicked" />

    </StackLayout>
    
</ContentPage>