<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyNutrition.Views.AddMenuPage"
             Title="เพิ่มเมนู">

    <!--ตกแต่ง Title ของหน้าเพิ่มเมนู-->
    <NavigationPage.TitleView>
        <Label x:Name="pageTitleView"
               Text="เพิ่มเมนู"
               TextColor="White"
               FontSize="22"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"/>
    </NavigationPage.TitleView>

    <!--ปุ่มย้อยกลับ-->
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnBack"
                     Clicked="btnBack_Clicked">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="AwesomeSoild"
                                 Glyph="&#x2039;"
                                 Size="30"/>
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout>

        <!-- รูปอาหาร -->
        <Image x:Name="FoodImage" 
               HeightRequest="200" 
               WidthRequest="200" 
               Margin="10"
               Aspect="AspectFill" />
        <Button Text="อัปโหลดรูปอาหาร" 
                Margin="20"
                Clicked="UploadImageButton_Clicked" />
        
        
        <!-- ฟิลด์กรอกข้อมูล -->
        <Entry x:Name="MenuName"
               Text="{Binding Name}"
               Placeholder="ชื่อเมนู"
               PlaceholderColor="#4a4a4a"
               Margin="10"/>
        
        <Entry x:Name="Protein" 
               Text="{Binding Protein}"
               Placeholder="โปรตีน (g)"
               PlaceholderColor="#4a4a4a"
               Keyboard="Numeric"
               Margin="10"/>
        
        <Entry x:Name="Carbohydrates"
               Text="{Binding Carbohydrates}"
               Placeholder="คาร์โบไฮเดรต (g)"
               PlaceholderColor="#4a4a4a"
               Keyboard="Numeric"
               Margin="10"/>
        
        <Entry x:Name="Fat" 
               Text="{Binding Fat}"
               Placeholder="ไขมัน (g)"
               PlaceholderColor="#4a4a4a"
               Keyboard="Numeric"
               Margin="10"/>

        <Label x:Name="EnergyLabel" 
               Text="{Binding Energy, StringFormat='พลังงานทั้งหมด : {0:F2} แคลอรี่'}"
               FontAttributes="Bold"
               Margin="20"/>

        <!--ปุ่มเพิ่มเมนู-->
        <Button x:Name="btnAddMenu"
                Text="เพิ่มเมนู" 
                Margin="20"
                WidthRequest="150"
                Clicked="btnAddMenu_Clicked" />

    </VerticalStackLayout>
    
</ContentPage>