<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DailyNutrition.Views.TodayMenuPage"
             Title="วันนี้กินอะไร">

    <Grid RowDefinitions="50,50,*,40,80"
          Margin="10">

        <!-- แทบค้นหาเมนู -->
        <Border Grid.Row="0"
                Stroke="Gray"
                StrokeThickness="1"
                VerticalOptions="Center"
                HeightRequest="40"
                Margin="10">

            <!-- ไว้ทำให้ขอบ Border มน -->
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>

            <!-- คำสั่ง SearchBar -->
            <SearchBar x:Name="MenuSearchBar"
                       Placeholder="ค้นหาเมนู"
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       BackgroundColor="WhiteSmoke"
                       FontSize="Medium"
                       CancelButtonColor="Gray"
                       HorizontalTextAlignment="Start"
                       HorizontalOptions="Fill"
                       TextChanged="MenuSearchBar_TextChanged"/>
        </Border>

        <!-- List รายการเมนู -->
        <Label Grid.Row="1"
               Text="รายการเมนู"
               FontSize="22"
               Margin="10"/>
        <Border Grid.Row="2"
                Stroke="Gray"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10"
                Margin="5">

            <CollectionView x:Name="TodayMenu"
                            SelectionMode="Multiple"
                            SelectionChanged="TodayMenu_SelectionChanged">

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     VerticalItemSpacing="5"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="TodayMenuBorder"
                                BackgroundColor="LightGreen"
                                Stroke="WhiteSmoke"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 10"
                                Padding="5">

                            <!-- DataTrigger เปลี่ยนสีเมื่อถูกเลือก -->
                            <Border.Triggers>
                                <DataTrigger TargetType="Border" 
                                             Binding="{Binding IsSelected}" 
                                             Value="True">
                                    <Setter Property="BackgroundColor" 
                                            Value="Orange"/>
                                </DataTrigger>
                            </Border.Triggers>

                            <Grid RowDefinitions="*,*,*,*,*"
                                  ColumnDefinitions="75,*,80"
                                  RowSpacing="5"
                                  ColumnSpacing="10">

                                <Image Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.RowSpan="5"
                                       Source="{Binding ImagePath}"
                                       WidthRequest="70"
                                       HeightRequest="70"
                                       Aspect="AspectFill"
                                       HorizontalOptions="Start"
                                       VerticalOptions="Center"/>
                                
                                
                                <Label Grid.Row="0" 
                                       Grid.Column="1"
                                       Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#2b2b2b"/>
                                
                                <Label Grid.Row="1" 
                                       Grid.Column="1"
                                       Text="{Binding Protein, StringFormat='โปรตีน : {0:F2} กรัม'}"
                                       FontSize="14"
                                       TextColor="#4a4a4a"/>
                                
                                <Label Grid.Row="2" 
                                       Grid.Column="1"
                                       Text="{Binding Carbohydrates, StringFormat='คาร์โบไฮเดรต : {0:F2} กรัม'}"
                                       FontSize="14"
                                       TextColor="#4a4a4a"/>
                                
                                <Label Grid.Row="3" 
                                       Grid.Column="1"
                                       Text="{Binding Fat, StringFormat='ไขมัน : {0:F2} กรัม'}"   
                                       FontSize="14"
                                       TextColor="#4a4a4a"/>

                                <Label Grid.Row="4" 
                                       Grid.Column="1"
                                       Text="{Binding Energy, StringFormat='พลังงานทั้งหมด : {0:F2} แคลอรี่'}"   
                                       FontSize="14"
                                       TextColor="#4a4a4a"/>

                                <VerticalStackLayout Grid.Row="0" 
                                                     Grid.Column="2"
                                                     Grid.RowSpan="5"
                                                     Spacing="10">
                                    <Label Text="{Binding Quantity, StringFormat='จำนวน : {0}'}"
                                           HorizontalOptions="Center"
                                           VerticalOptions="End"/>
                                    <HorizontalStackLayout>
                                        <Stepper Minimum="1" 
                                                 Maximum="10" 
                                                 Increment="1"
                                                 Value="{Binding Quantity, Mode=TwoWay}"
                                                 WidthRequest="80"
                                                 ValueChanged="Stepper_ValueChanged"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <Label Text="ยังไม่มีรายการเมนูอาหาร"
                            FontSize="16"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>
                </CollectionView.EmptyView>

            </CollectionView>
        </Border>

        <!-- แสดงผลลัพธ์พลังงานที่จะได้รับทั้งหมด -->
        <Label x:Name="TotalEnergyLabel"
               Grid.Row="3"
               Text="พลังงานทั้งหมดที่ได้รับในวันนี้ : 0 cal"
               FontAttributes="Bold"
               FontSize="18"
               HorizontalOptions="Start"
               VerticalOptions="Center"
               Margin="10"/>

        <!-- ปุ่มบันทึกพลังงานแคลอรี่ลงในฐานข้อมูล -->
        <Button x:Name="btnAddEnergy"
                Grid.Row="4"
                Text="บันทึกแคลอรี่ในวันนี้"
                BackgroundColor="Blue"
                WidthRequest="175"
                CornerRadius="20"
                VerticalOptions="End"
                Margin="10"
                CommandParameter="{Binding .}"
                Clicked="btnAddEnergy_Clicked"/>
    </Grid>
    
</ContentPage>